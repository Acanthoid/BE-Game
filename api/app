const express = require("express");
const app = express();
const { getCategories, findReviewById, getUsers, changeVotes } = require('./controllers/controller');
app.use(express.json()); //just let it be!
const {internalErrorHandling, customErrorHandling, PSQLErrorHandling } = require('./controllers/error_handling')

//Simple test that API is functional - used for debug
/*app.get("/api", (req, res) => {
    res.status(200).send({ msg: "API is functional" });
}); */

//returns catagories data
app.get("/api/categories", getCategories);

//returns specified review
app.get("/api/reviews/:review_id", findReviewById);

//returns user data
app.get("/api/users", getUsers)

app.patch("/api/reviews/:review_id", changeVotes)

//Errors
app.use(PSQLErrorHandling)

app.use(customErrorHandling)

app.use(internalErrorHandling)
module.exports = app;